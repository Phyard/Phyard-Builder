<?xml version="1.0" encoding="utf-8"?>
<!-- Simple custom MXML TitleWindow component.
     The TitleWindowApp application displays this component. 
     You cannot run it independently. -->

<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
    title="Slider Setting" width="500">


   <mx:XMLList id="IsBulletOptions">
      <node label="Default"/>
      <node label="Yes"/>
      <node label="No"/>
   </mx:XMLList>

   <mx:HBox width="100%" verticalAlign="bottom">
      <mx:CheckBox id="CheckBox_IsVisible" label="Visible"/>
      <mx:Spacer width="100%"/>
      <mx:CheckBox id="CheckBox_CollideConnected" label="Collide Connected Shapes"/>
      <mx:Spacer width="100%"/>
   </mx:HBox>

   <mx:HBox width="100%" verticalAlign="bottom">
      <mx:CheckBox id="CheckBox_LimitEnabled" label="Enable Limit"/>
   </mx:HBox>

   <mx:HBox width="100%" verticalAlign="bottom">
      <mx:Label id="Label_LowerTranslation" text="Lower Translation:" textAlign="right" width="23%"/>
      <mx:HSlider id="Slider_LowerTranslation" focusEnabled="false" minimum="-600" maximum="0" value="-10" width="77%"
          dataTipPlacement="top" tickColor="black" snapInterval="1" tickInterval="100"
          labels="['-600', '-300', '0']" allowTrackClick="true" liveDragging="true" />
   </mx:HBox>

   <mx:HBox width="100%" verticalAlign="bottom">
      <mx:Label id="Label_UpperTranslation" text="Upper Translation:" textAlign="right" width="23%"/>
      <mx:HSlider id="Slider_UpperTranslation" focusEnabled="false" minimum="0" maximum="600" value="10" width="77%"
          dataTipPlacement="top" tickColor="black" snapInterval="1" tickInterval="100"
          labels="['0', '300', '600']" allowTrackClick="true" liveDragging="true" />
   </mx:HBox>
   
   <mx:Spacer height="6"/>
   
   <mx:HBox width="100%" verticalAlign="bottom">
      <mx:CheckBox id="CheckBox_MotorEnabled" label="Enable Motor"/>
   </mx:HBox>

   <mx:HBox width="100%" verticalAlign="bottom">
      <mx:Label id="Label_MotorSpeed" text="Motor Speed:" textAlign="right" width="23%"/>
      <mx:HSlider id="Slider_MotorSpeed" focusEnabled="false" minimum="-300" maximum="300" value="0" width="77%"
          dataTipPlacement="top" tickColor="black" snapInterval="1" tickInterval="60"
          labels="['-300', '0', '300']" allowTrackClick="true" liveDragging="true" />
   </mx:HBox>

   <mx:HBox width="100%" verticalAlign="bottom">
      <mx:CheckBox id="CheckBox_BackAndForth" label="Back and Forth between Limits"/>
   </mx:HBox>


   <mx:Spacer height="20"/>

   <mx:HBox width="100%" verticalAlign="bottom">
      <mx:Spacer width="100%"/>
      <mx:Button label="OK" click="OnClickOkButton ();"/>
      <mx:Spacer width="30"/>
      <mx:Button label="Cancel" click="OnClickCancelButton ();"/>
      <!--
      <mx:Spacer width="30"/>
      <mx:Button label="Default" click="OnClickDefaultButton ();"/>
      -->
      <mx:Spacer width="100%"/>
   </mx:HBox>


   <mx:Script>
      <![CDATA[       
         import mx.managers.PopUpManager;
         
         private var OnConfirm:Function = null;
         private var OnClose:Function = null;
         
         public function SetValues (values:Object):void
         {
            CheckBox_IsVisible.selected = values.mIsVisible;
            CheckBox_IsVisible.enabled = false;
            CheckBox_CollideConnected.selected = values.mCollideConnected;
            
            CheckBox_LimitEnabled.selected = values.mEnableLimit;
            Slider_LowerTranslation.value = values.mLowerTranslation;
            Slider_UpperTranslation.value = values.mUpperTranslation;
            
            CheckBox_MotorEnabled.selected = values.mEnableMotor;
            Slider_MotorSpeed.value = values.mMotorSpeed;
            
            CheckBox_BackAndForth.selected = values.mBackAndForth;
         }
         
         public function SetConfirmFunc (onConfirm:Function):void
         {
            OnConfirm = onConfirm;
         }
         
         public function SetCloseFunc (onClose:Function):void
         {
            OnClose = onClose;
         }
         
         private function OnClickOkButton():void 
         {
             var params:Object = new Object ();
             
             params.mIsVisible = CheckBox_IsVisible.selected;
             params.mCollideConnected = CheckBox_CollideConnected.selected;
             
             params.mEnableLimit = CheckBox_LimitEnabled.selected;
             params.mLowerTranslation = Slider_LowerTranslation.value;
             params.mUpperTranslation = Slider_UpperTranslation.value;
             
             params.mEnableMotor = CheckBox_MotorEnabled.selected;
             params.mMotorSpeed = Slider_MotorSpeed.value;
             
             params.mBackAndForth = CheckBox_BackAndForth.selected;
             
             PopUpManager.removePopUp(this);
             
            if (OnConfirm != null)
               OnConfirm (params);
             
             if (OnClose != null)
               OnClose ();
         }
         
         private function OnClickCancelButton():void 
         {
             PopUpManager.removePopUp(this);
             
             if (OnClose != null)
               OnClose ();
         }
         
         
         private function OnClickDefaultButton ():void
         {
            var values:Object = new Object ();
            
            // ...
            
            SetValues (values);
         }
         
     ]]>
   </mx:Script>



</mx:TitleWindow>