<?xml version="1.0" encoding="utf-8"?>
<!-- Simple custom MXML TitleWindow component.
     The TitleWindowApp application displays this component. 
     You cannot run it independently. -->
     
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
    title="Load Play Code" width="500">

   <mx:HBox width="100%" verticalAlign="bottom">
      <mx:Label id="Label_PlayCode" text="Please paste the Play Code in the text area:"/>
   </mx:HBox>

   <mx:HBox width="100%" verticalAlign="top">
      <mx:TextArea id="TextArea_PlayCode" width="100%" height="200" editable="true">
         <mx:text>
         </mx:text>
      </mx:TextArea>
   </mx:HBox>

   <mx:Spacer height="10"/>

   <mx:HBox width="100%" verticalAlign="bottom">
      <mx:Spacer width="100%"/>
      <mx:Button label="Load" click="OnClickOkButton ();"/>
      <mx:Spacer width="30"/>
      <mx:Button label="Cancel" click="OnClickCancelButton ();"/>
      <!--
      <mx:Spacer width="30"/>
      <mx:Button label="Default" click="OnClickDefaultButton ();"/>
      -->
      <mx:Spacer width="100%"/>
   </mx:HBox>
   
   
   <mx:Script>
     <![CDATA[       
         import mx.managers.PopUpManager;
         
         private var OnConfirm:Function = null;
         private var OnClose:Function = null;
         
         public function SetConfirmFunc (onConfirm:Function):void
         {
            OnConfirm = onConfirm;
         }
         
         public function SetCloseFunc (onClose:Function):void
         {
            OnClose = onClose;
         }
         
         private function OnClickOkButton():void 
         {
            PopUpManager.removePopUp(this);
            
            var params:Object = new Object ();
            
           params.mHexString = TextArea_PlayCode.text;
            
           if (OnConfirm != null)
              OnConfirm (params);
             
           if (OnClose != null)
              OnClose ();
         }
         
         private function OnClickCancelButton():void 
         {
             PopUpManager.removePopUp(this);
             
             if (OnClose != null)
               OnClose ();
         }
         
         
     ]]>
   </mx:Script>
   
   

</mx:TitleWindow>