<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
         xmlns:ed_display="editor.display.*" 
      borderThickness="10" borderStyle="solid" borderColor="0xFFFFFF"
      width="100%" height="100%"
      creationComplete="OnInitPanel()"
      >
   <mx:HBox height="100%" width="100%">
      <mx:HDividedBox width="100%" height="100%">
         <mx:VBox height="100%" width="200">
            <mx:HBox height="26" width="100%">
               <mx:Button label="A" click="OnAdd ()" />
               <mx:Button label="R"  />
               <mx:Button label="U"  />
               <mx:Button label="D"  />
            </mx:HBox>
            <mx:List width="100%" height="100%" editable="true" />
         </mx:VBox>
         <mx:VBox height="100%" width="100%">
            <mx:Label width="100%" text="Function: " />
            <mx:VDividedBox width="100%" height="100%" >
               <mx:VBox height="150" width="100%">
                  <mx:HBox height="26" width="100%">
                     <mx:Label width="100%" text="Parameters: " />
                     <mx:Button label="Edit" />
                     <mx:Button label="Add" click="OnAdd ()" />
                     <mx:Button label="Remove"  />
                     <mx:Button label="Up"  />
                     <mx:Button label="Down"  />
                  </mx:HBox>
                  <mx:List width="100%" height="100%" />
               </mx:VBox>
               <mx:VBox height="100%" width="100%">
                  <mx:HBox height="26" width="100%">
                     <mx:Label width="100%" text="Triggers: " />
                     <mx:Button label="Condition" />
                     <mx:Button label="And" />
                     <mx:Button label="Or"  />
                     <mx:Button label="Not"  />
                     <mx:Button label="Action"  />
                     <mx:Button label="Trigger"  />
                  </mx:HBox>
                  <ed_display:FunctionEditCanvas width="100%" height="100%" />
               </mx:VBox>
            </mx:VDividedBox>
         </mx:VBox>
      </mx:HDividedBox>
   </mx:HBox>

   <mx:Script>
        <![CDATA[
            
            import editor.runtime.Runtime;
            
            private function OnInitPanel ():void
            {
            }
            
            private function OnAdd ():void
            {
               //Runtime.mEditorWorldView.GetEditorWorld ().AddCustomGlobalFunction ();
            }
            
       ]]>
   </mx:Script>
   
</mx:VBox>