<?xml version="1.0" encoding="utf-8"?>
<!-- Simple custom MXML TitleWindow component.
     The TitleWindowApp application displays this component.
     You cannot run it independently. -->

<mx:TitleWindow 
    xmlns:mx="http://www.adobe.com/2006/mxml"
    xmlns:sound="editor.sound.*" 
    xmlns="editor.display.dialog.*"
    title="Sound Assets Manager"
    width="500" height="500"
    paddingTop="0" paddingLeft="0" paddingRight="0" paddingBottom="0"
    showCloseButton="true"
    close="HideAssetSoundEditDialog ();"
    >

   <mx:HBox backgroundColor="0xE0E0E0" borderStyle="solid" width="100%" height="100%"
            paddingTop="0" paddingLeft="0" paddingRight="0" paddingBottom="0"
            horizontalScrollPolicy="off" verticalScrollPolicy="off"
            horizontalGap="0" verticalGap="0" borderThickness="0"
            >
      <sound:AssetSoundEditingPanel id="panelAssetSoundEditing" width="100%" height="100%"/>
   </mx:HBox>

   <mx:Script>
      <![CDATA[
      
         import mx.managers.PopUpManager;
         
         import editor.runtime.Runtime;

      // static functions
         
         private static var sAssetSoundEditDialog:AssetSoundEditDialog = null;
         public static function ShowAssetSoundEditDialog ():void
         {
            if (sAssetSoundEditDialog == null)
            {
               sAssetSoundEditDialog = new AssetSoundEditDialog ();
            }
            
            if (sAssetSoundEditDialog.parent != null)
            {
               PopUpManager.bringToFront (sAssetSoundEditDialog);
            }
            else
            {
               PopUpManager.addPopUp (sAssetSoundEditDialog, Runtime.GetApplication (), false);
               PopUpManager.centerPopUp (sAssetSoundEditDialog);
            }
         }
         
         public static function HideAssetSoundEditDialog ():void
         {
            PopUpManager.removePopUp(sAssetSoundEditDialog);
         }
         
      // ...

     ]]>
   </mx:Script>



</mx:TitleWindow>
