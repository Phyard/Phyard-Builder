<?xml version="1.0" encoding="utf-8"?>
<!-- Simple custom MXML TitleWindow component.
     The TitleWindowApp application displays this component. 
     You cannot run it independently. -->
     
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
    title="Move Accurately" width="300"
    creationComplete="OnInitPanel ()">

   <mx:HBox width="100%">
      <mx:Spacer width="100%" />
      <mx:Label id="Label_X" text="Move Offset X:" textAlign="right"/>
      <mx:TextInput id="TextInput_MoveX" width="80" text="0"/>
      <mx:Label text="px" textAlign="left" />
      <mx:Spacer width="100%" />
   </mx:HBox>

   <mx:HBox width="100%">
      <mx:Label id="Label_Y" text="Move Offset Y:" textAlign="right" width="100"/>
      <mx:TextInput id="TextInput_MoveY" width="80" text="0"/>
      <mx:Label text="px" textAlign="left" />
   </mx:HBox>

   <mx:Spacer height="10"/>

   <mx:HBox width="100%">
      <mx:Spacer width="100%"/>
      <mx:Button label="OK" click="OnClickOkButton ();"/>
      <mx:Spacer width="30"/>
      <mx:Button label="Cancel" click="OnClickCancelButton ();"/>
      <!--
      <mx:Spacer width="30"/>
      <mx:Button label="Default" click="OnClickDefaultButton ();"/>
      -->
      <mx:Spacer width="100%"/>
   </mx:HBox>
   
   
   <mx:Script>
     <![CDATA[       
         import mx.managers.PopUpManager;
         
         private var OnConfirm:Function = null;
         private var OnClose:Function = null;

         private var mIsMoveTo:Boolean = false;
         public function SetValues (initialValues:Object):void
         {
            if (initialValues != null && initialValues.mIsMoveTo != null)
            {
               mIsMoveTo = initialValues.mIsMoveTo as Boolean;
            }
         }
         
         public function SetConfirmFunc (onConfirm:Function):void
         {
            OnConfirm = onConfirm;
         }
         
         public function SetCloseFunc (onClose:Function):void
         {
            OnClose = onClose;
         }
         
         private function OnInitPanel ():void
         {
            if (mIsMoveTo)
            {
               Label_X.text = "Move Target X:";
               Label_Y.text = "Move Target Y:";
            }
         }
         
         private function OnClickOkButton():void 
         {
            PopUpManager.removePopUp(this);
            
            var valueX:Number = parseFloat (TextInput_MoveX.text);
            if ( isNaN (valueX) )
               valueX = 0;
            
            var valueY:Number = parseFloat (TextInput_MoveY.text);
            if ( isNaN (valueY) )
               valueY = 0;
            
            var params:Object = new Object ();
            
            if (mIsMoveTo)
            {
               params.mTargetX = valueX;
               params.mTargetY = valueY;
            }
            else
            {
               params.mOffsetX = valueX;
               params.mOffsetY = valueY;
            }
            
            if (OnClose != null)
               OnClose ();
            
            if (OnConfirm != null)
               OnConfirm (params);
         }
         
         private function OnClickCancelButton():void 
         {
             PopUpManager.removePopUp(this);
             
             if (OnClose != null)
               OnClose ();
         }
         
         
     ]]>
   </mx:Script>
   
   

</mx:TitleWindow>
